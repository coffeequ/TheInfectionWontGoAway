<Application x:Class="Инфекция_не_пройдет.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Инфекция_не_пройдет"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"></Setter>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Button" x:Key="RoundedButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"></Setter>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="Button" x:Key="GrayButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Padding" Value="30,5"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>


    </Application.Resources>
</Application>
